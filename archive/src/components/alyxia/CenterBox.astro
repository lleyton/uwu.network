---
    let { title, divclass, headerclass, fadeinclass } = Astro.props;
    divclass = divclass ?? "block";
    headerclass = headerclass ?? "header";
    fadeinclass = fadeinclass ?? "fadein";
---

<div class="padder"></div>
<center>
    <div id={divclass} class="nope nah">
        <center id={fadeinclass} class="nope">
            <h1 id={headerclass}>{title}</h1>
            <slot />
        </center>
    </div>
</center>

<style lang="scss">
    // TODO: CHANGE TO MARGIN AFTER IMPLEMENTING NAVBAR
    .padder {
        padding: 20vh;
    }

    #fadein {
        transition: 1s;

        &.nope {
            opacity: 0;
        }
    }

    #block {
        background-color: #000;
        width: 60em;
        padding: 1em;
        overflow-y: hidden;
        max-height: 100vh;
        transition: 1s;
        box-shadow: 0px 0px 256px rgb(55 159 245 / 70%);
        padding-bottom: 1.2em;

        &.nah {
            opacity: 0;
        }

        &.nope {
            max-height: 0px;
            padding-bottom: 0px;
            transition: 0.4s;
        }
    }
</style>